#
# wm independent hotkeys
#
# Lock screen
alt + shift + {x,o}
    {$HOME/bin/i3lock-daniel3.sh,xtrlock}

# Start ranger
#alt + r
#	urxvt -e xanger

# Toggle VPN-connections
alt + shift + v
	/home/nomad/bin/vpn-toggle.sh

# Restart Polybar
alt + super + r

# Toggle touchpad
alt + shift + m
	/home/nomad/bin/toggle_touchpad.sh

# terminal emulator
alt + Return
	urxvt	

# new browser window
super + Return
	google-chrome-stable	

# program launcher
#alt + d
#    rofi -modi combi -show combi -combi-modi drun,run -font "Fira Mono for Powerline 22" -width 30 -opacity 50 -show-icons -location 6 -lines 5
alt + d
    rofi -modi combi -show combi -combi-modi drun,run -config $HOME/.config/rofi/drun_conf
#alt + d
#    j4-dmenu-desktop --dmenu='dmenu -i -nb "$color0" -nf "$color15" -sb "$color1" -sf "$color15" -fn "Ubuntu Condensed:8" -p "Search: "'


# make sxhkd reload its configuration files:
alt + Escape
	{$HOME/.config/polybar/launch.sh, pkill -USR1 -x sxhkd}

#
# bspwm hotkeys
#

# quit bspwm normally
alt + shift + e
	bspc quit

# close and kill
alt + shift + q
	bspc node -c

# alternate between the tiled and monocle layout
alt + m
	bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
alt + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
alt + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
alt + {t,shift + t}
	bspc node -t {tiled,pseudo_tiled}

# set floating + fullscreen keys as toggles
alt + {s,f}
	state={floating,fullscreen}; \
	bspc query -N -n "focused.$\{state\}" && state=tiled; \
	bspc node -t "$state"

# set the node flags
alt + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap/gaps
#

## Cycle through windows west/left 
alt + r
	bspc node @/ -R 90
## Cycle through windows east/right
alt + shift + r
	bspc node @/ -R -90

# focus the node in the given direction
alt + {_,shift + }{h,j,k,l} 
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
alt + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
alt + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
alt + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
alt + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
alt + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# increase or decrease window gap
alt + ctrl + {Up,Down}  
	gap="$(bspc config window_gap)"; \
	bspc config window_gap $(($gap{+,-}5))

#
# preselect
#

# preselect the direction
alt + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

#alt + ctrl + {Left,Down,Up,Right}
#	bspc node -p {west,south,north,east}
# preselect the ratio
alt + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
alt + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
alt + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#
# expand a window by moving one of its side outward
alt + super + {h,j,k,l}
	bspc node -z {left -40 0,bottom 0 40,top 0 -40,right 40 0}

alt + ctrl + shift + {Left,Up,Down,Right}
	bspc node -z {left -50 0, bottom 0 50,top 0 -50,right 50 0}
# contract a window by moving one of its side inward
alt + super + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
alt + {Left,Down,Up,Right}
	bspc node -v {-50 0,0 50,0 -50,50 0}

# media keys
XF86AudioRaiseVolume
	pactl set-sink-volume 0 +10%
shift + XF86AudioRaiseVolume 
	pactl set-sink-volume 0 +5%
XF86AudioLowerVolume
	pactl set-sink-volume 0 -10%
shift + XF86AudioLowerVolume
	pactl set-sink-volume 0 -5%
XF86AudioMute
	pactl set-sink-mute 0 toggle
XF86MonBrightnessUp 
	light -A 10
XF86MonBrightnessDown
	light -U 10
XF86AudioMicMute
    amixer -D pulse set Capture toggle

# Screenshot
Print
	scrot '/home/nomad/Pictures/Screenshots/%Y-%m-%d-%H-%M-%S_$wx$h.jpg'
